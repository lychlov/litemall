/**index.wxss**/


page {
    height: 100%;
    width: 100%;
    background: rgb(234, 255, 253);
}
  
.container {
height: 100%;
position: relative;
box-sizing: border-box;
font-size: 32rpx;
background: rgb(255, 255, 255);

}


.cell-next, .cell-previous {
padding: 0 13px;
position: relative;
font-size: 26rpx;
}

.cell-next::after {
content: " ";
display: inline-block;
height: 6px;
width: 6px;
border-width: 2px 2px 0 0;
border-color: #00bb6d;
border-style: solid;
-webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
transform: matrix(.71, .71, -.71, .71, 0, 0);
top: -2px;
position: absolute;
top: 50%;
margin-top: -4px;
}
  
.cell-previous::before {
content: " ";
display: inline-block;
height: 6px;
width: 6px;
border-width: 0 0 2px 2px;
border-color: #00bb6d;
border-style: solid;
-webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
transform: matrix(.71, .71, -.71, .71, 0, 0);
top: -2px;
position: absolute;
top: 50%;
margin-top: -4px;
}

.panel {
    padding: 28rpx;
}


.assessment-info {
    height: 655rpx;
    display:flex;
    flex-direction: column;
    align-items:center;
    justify-content: center;
}

.assessment-info.result {
    height: 405rpx;
}

.assessment-info.result .assessment-item {
    font-size: 46rpx;
}

.assessment-info.result .assessment-phonetic,
.assessment-info.result .assessment-mean
{
    font-size: 30rpx;
}

.assessment-text {
    max-width: 100%;
    word-wrap:break-word;
}

.assessment-item {
    font-size: 80rpx;
    color: #086A64;
    line-height: 80rpx;
    /* padding-right: .4em; */
}

.assessment-item + .assessment-item {
    padding-left: .4em;
}

.sentence-text {
    font-size: 60rpx;
}

.assessment-phonetic {
    position: relative;
    font-size: 40rpx;
    color: #086A64;
    line-height: 48rpx;
}


.text-success {
    color: #1aad19;
}
.text-error {
    color: #ff4444;
}
.assessment-mean {
    font-size: 30rpx;
    color: #000000;
    line-height: 48rpx;
    opacity: 0.7;
}

.play-img {
    margin-left: 20rpx;
    width: 33rpx;
    height: 30rpx;
}

.play-icon {
  display: inline-flex;
  position: relative;
  padding: 0 8rpx;
  bottom: -4rpx;
}

.result-wrap {
    height: 250rpx;
    display:flex;
    justify-content: center;
    align-items: center;
}
.score {
    font-size: 120rpx;
    color: #666;
}
.score.excellent {
    color: #FF6800;
}

.score.good {
    color: #4C6AFC;
}


.opt-wrap {
    display: flex;
    justify-content: space-around;
    align-items: center;
    color: #666;
}


.speaking-wrap {
    width: 190rpx;
    height: 190rpx;
    background: rgb(234, 238, 234);
    border-radius: 50%;
    opacity: 0.8;
    display: flex;
    justify-content: center;
    align-items: center;
}

.speaking-img{
    width: 190rpx;
    height: 150rpx;
}

.cell-switch {
    width: 86rpx;
    height: 86rpx;
    box-sizing:border-box;
    opacity: 0.8;
    background: rgb(234, 238, 234);
    box-shadow: 0 0 18px 0 rgba(8,70,66,0.06);
    border-radius: 50%;
}


.sentence-list {
    margin-top: 100rpx;
    margin-bottom: 50rpx;
}

/* .sent-mean-wrap {
    margin-left: 88rpx;
} */

.sentence-play-img {
    margin-right: 35rpx;
}

.sentence-item {
    border-top: 1px solid rgba(0, 0, 0, .1);
    padding: 50rpx 99rpx;

    opacity: 0.7;
    font-size: 34rpx;
    color: #000000;
}

/* reload */
.cell-previous {
    position: relative;
    padding:37rpx;
}
.cell-next {
    position: relative;
    padding:32rpx;
}
