<view class="container">
  <view class="my-info">
    <view class="profile-info" bindtap="goLogin">
      <image class="avatar" src="{{userInfo.avatarUrl}}" />
      <view class="my-info-name">{{userInfo.nickName}}
        <text></text><wux-tag color="gold">gold</wux-tag>
      </view>
    </view>
    <view class="my-info-order">
      <view class="list-icon" bindtap="goOrder" data-index="0">
        <view class="{{tabClass[0]}}"></view>
        <image src="../../../images/my-info.png" />
        <text>个人信息</text>
      </view>
      <view class="list-icon" bindtap="goOrder" data-index="1">
        <view class="{{tabClass[1]}}"></view>
        <image src="../../../images/phone-icon-1.png" />
        <text>绑定手机</text>
      </view>
      <view class="list-icon" bindtap="goOrder" data-index="2">
        <view class="{{tabClass[2]}}"></view>
        <image src="../../../images/my-fav.png" />
        <text>我的收藏</text>
      </view>
      <view class="list-icon" bindtap="goOrder" data-index="3">
        <view class="{{tabClass[3]}}"></view>
        <image src="../../../images/exercise-analysis.png" />
        <text>练习统计</text>
      </view>
    </view>
  </view>
  <view class="my-item-list">
    <view class="my-item">
      <navigator url="/pages/index/index" hover-class="none">我的课程</navigator>
      <image src="../../../images/right-icon.png" />
    </view>
    <view class="my-item">
      <navigator url="/pages/index/index" hover-class="none">我的练习</navigator>
      <image src="../../../images/right-icon.png" />
    </view>
    <view class="my-item">
      <navigator url="/pages/index/index" hover-class="none">学习积分</navigator>
      <image src="../../../images/right-icon.png" />
    </view>
    <view class="my-item">
      <navigator url="/pages/index/index" hover-class="none">学习报表</navigator>
      <image src="../../../images/right-icon.png" />
      <view class="my-item">
      <navigator url="/pages/index/index" hover-class="none">我要吐槽</navigator>
      <image src="../../../images/right-icon.png" />
    </view>
    </view>
  </view>
</view>